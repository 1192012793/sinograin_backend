<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.sinograin.model.barn.warehousePosition">

	<insert id="save" parameterType="warehousePosition" keyProperty="id" useGeneratedKeys="true">
		insert into barn_warehousePosition (position,isStorage) 
		values (#{position},#{isStorage})
	</insert>
	<!-- 删除某个测定记录 -->
	<delete id="delete" parameterType="int" >
		delete from barn_warehousePosition where id = #{id}
	</delete>
	
	<!-- 查询某个测定记录 -->
	<select id="find" parameterType="int" resultType="warehousePosition">
		select * from barn_warehousePosition where id = #{id}
	</select>
	
	<!-- 查询全部测定记录  -->
	<select id="findAll" resultType="warehousePosition" parameterType="Map">
		select * from barn_warehousePosition
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询交接单  -->
	<select id="findPaginated" resultType="warehousePosition" parameterType="Map">
		select * from barn_warehousePosition 
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from barn_warehousePosition 
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 修改某个测定记录  -->
	<update id="update" parameterType="warehousePosition">
		update barn_warehousePosition
		<set>
			<if test="position != null and position != ''">position = #{position},</if>
			<if test="isStorage != null and isStorage != ''">isStorage = #{isStorage},</if>	
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
		    <if test=" position != null and position != '' ">
				and position like concat(concat('%', #{position, jdbcType=VARCHAR}),'%') 
			</if>
			<if test="isStorage != null and isStorage != ''">
				and isStorage = #{isStorage}
			</if>
		</where>
	</sql>
	
</mapper>